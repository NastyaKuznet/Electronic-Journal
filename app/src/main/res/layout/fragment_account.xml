<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- android:fontFamily="@font/Montserrat-Regular"-->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="16dp"
            android:text="Аккаунт"
            android:textSize="26sp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_base_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/avatarImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/rounded_image"
                app:layout_constraintStart_toStartOf="@id/cl_base_icon"
                app:layout_constraintEnd_toEndOf="@id/cl_base_icon"
                app:layout_constraintTop_toTopOf="@id/cl_base_icon"/>
        </androidx.constraintlayout.widget.ConstraintLayout>



        <TextView
            android:id="@+id/tv_surname_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="Фамилия"
            android:textColor="@color/grayMid"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_surname"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/custom_edittext"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:textColorHint="@color/black"
            android:hint="Фамилия" />

        <TextView
            android:id="@+id/tv_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:text="Имя"
            android:textColor="@color/grayMid"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/custom_edittext"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:textColorHint="@color/black"
            android:hint="Имя"/>

        <TextView
            android:id="@+id/tv_patronymic_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:text="Отчество"
            android:textColor="@color/grayMid"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/tv_patronymiс"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/custom_edittext"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:textColorHint="@color/black"
            android:hint="Отчество"/>

        <TextView
            android:id="@+id/tv_group_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:text="Группа"
            android:textColor="@color/grayMid"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/tv_group"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/custom_edittext"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:textColorHint="@color/black"
            android:hint="ПрИ-101"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>