<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:fontFamily="@font/Montserrat-Regular"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/ib_back"
                android:layout_height="48dp"
                android:layout_width="48dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/arrow_2_icon" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Назад"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:textSize="16dp" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_base_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/avatarImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/rounded_image"
                app:layout_constraintStart_toStartOf="@id/cl_base_icon"
                app:layout_constraintEnd_toEndOf="@id/cl_base_icon"
                app:layout_constraintTop_toTopOf="@id/cl_base_icon"/>
        </androidx.constraintlayout.widget.ConstraintLayout>



        <TextView
            android:id="@+id/tv_teacher_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="Преподаватель"
            android:textColor="@color/grayMid"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/tv_teacher_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/custom_edittext"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:textColorHint="@color/black"
            android:hint="Шмаль Антонина Федоровна" />

        <TextView
            android:id="@+id/tv_subject_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:text="Предмет"
            android:textColor="@color/grayMid"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/tv_subject_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/custom_edittext"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:textColorHint="@color/black"
            android:hint="Английский язык"/>

        <TextView
            android:id="@+id/tv_notes_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:text="Заметки"
            android:textColor="@color/grayMid"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/tv_notes"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_edittext"
            android:hint="Связываться по почте meow@mail.ru"
            android:padding="10dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:textColorHint="@color/black"
            android:gravity="top|start"
            android:inputType="textMultiLine"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>